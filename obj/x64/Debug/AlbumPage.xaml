<Page x:ConnectionId='1'
    x:Class="Music_thing.AlbumPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Music_thing"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

       
    <Grid>
        <!--<DataTemplate x:DataType="local:Album">
            
        </DataTemplate>-->
        <Image x:ConnectionId='2' Width="400" Height="400"                                />
        <ListView x:ConnectionId='3' x:Name="ListViewSongs" Margin="20,20,20,0"                             >
            
            <ListView.ItemTemplate>
                <DataTemplate                        >
                    <StackPanel x:ConnectionId='4' Orientation="Horizontal" Height="44" Margin="0,0,0,0">
                        <Button x:ConnectionId='5' x:Name="playButton"                           FontFamily="Segoe MDL2 Assets" Content="&#xE768;" Width="44" Height="100" Background="Transparent" Margin="-12,0,5,0"                           />
                        <Button x:ConnectionId='6' x:Name="addToPlaylistButton"                                    FontFamily="Segoe MDL2 Assets" Content="&#xE948;" Width="44" Height="100" Background="Transparent" Margin="-5,0,5,0"                  />
                        <TextBlock x:ConnectionId='7'                    VerticalAlignment="Center" Width="75" Margin="0,0,5,0"/>
                        <TextBlock x:ConnectionId='8'                       VerticalAlignment="Center" Width="400" Margin="0,0,5,0"/>
                        <TextBlock x:ConnectionId='9'                       VerticalAlignment="Center" Width="350" Margin="0,0,5,0"/>
                        <TextBlock x:ConnectionId='10'                        VerticalAlignment="Center" Width="250" Margin="0,0,5,0"/>
                        <TextBlock x:ConnectionId='11'                      VerticalAlignment="Center" Width="100" Margin="0,0,5,0"/>
                        <TextBlock x:ConnectionId='12'                             VerticalAlignment="Center" Width="100"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>

